{
  "name": "static-website-validation",
  "version": "1.0.0",
  "description": "Automated validation and testing for static website content (HTML, CSS/SCSS, JS, accessibility, and E2E).",
  "scripts": {
    "htmlhint": "htmlhint ./static/**/*.html",
    "stylelint": "stylelint \"static/**/*.css\" \"static/**/*.scss\"",
    "eslint": "eslint static/**/*.js",
    "pa11y": "pa11y http://localhost:5000",
    "test:e2e": "cypress run",
    "lint": "npm run htmlhint && npm run stylelint && npm run eslint",
    "test": "npm run lint && npm run test:e2e"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "cypress": "^13.0.0",
    "eslint": "^9.39.1",
    "htmlhint": "^1.1.4",
    "pa11y": "^9.0.1",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^35.0.0"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JDevOps2025/JDevOps_Software_Engineering.git"
  },
